{
  "name": "@zod-codepen/docs",
  "version": "0.0.2",
  "description": "Zod Codepen Documentation",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev .",
    "build": "vitepress build .",
    "preview": "vitepress preview .",
    "deploy": "pnpm build && wrangler pages deploy .vitepress/dist --project-name=zod-codepen",
    "deploy:preview": "pnpm build && wrangler pages deploy .vitepress/dist --project-name=zod-codepen --branch=preview",
    "check:links": "find . -name '*.md' -not -path './node_modules/*' -not -path './.vitepress/*' | xargs -I {} markdown-link-check {} -c .markdown-link-check.json"
  },
  "dependencies": {
    "shiki": "^1.0.0"
  },
  "devDependencies": {
    "@zod-codepen/zod-v3": "workspace:*",
    "@zod-codepen/zod-v4": "workspace:*",
    "markdown-link-check": "^3.14.2",
    "vitepress": "^1.5.0",
    "wrangler": "^4.53.0"
  }
}
